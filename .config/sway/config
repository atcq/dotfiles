# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK

### Variables
#

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# workspace names
set $ws1 "1mix"
set $ws2 "2chat"
set $ws3 "3work"
set $ws4 "4media"
set $ws5 "5music"
set $ws6 "6chrome"
set $ws7 "7_mix"
set $ws8 "8edit"
set $ws9 "9misc"

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term kitty

# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu $HOME/.config/wofi/wofi-drun.sh | xargs swaymsg exec --

# You can get the names of your outputs by running: swaymsg -t get_outputs
set $edp "eDP-1"
set $ex1 "HDMI-A-1"


#
# Keyboard configuration
# use CapsLock as super
input type:keyboard {
    xkb_layout us,de
    xkb_options caps:super,grp:alt_space_toggle
}

# Touchpad configuration
input type:touchpad {
    tap enabled
    natural_scroll enabled
    dwt enabled
    scroll_factor 0.5
    pointer_accel 0.3
}


### Output configuration
#

# set wallpaper
output * bg $HOME/Pictures/wallpaper/the-witcher-minimalist-colour.jpg fill

# set the cursor theme
seat seat0 xcursor_theme Vimix-cursors

# GTK theme configuration
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'atcq-rose'
    gsettings set $gnome-schema icon-theme 'BeautyLine'
    gsettings set $gnome-schema cursor-theme 'Vimix-cursors'
    gsettings set $gnome-schema font-name 'Source Code Pro'
}

# change focus to external monitor if available
focus output $ex1
# setup all monitors
output $edp scale 1.25
output $ex1 pos 0 0 res 1920x1080
output $edp pos 1920 0 res 1920x1080


### Idle configuration
#
# Example configuration:
#

# mega swaylock command FTW
set $lock 'swaylock --screenshots --clock --indicator-idle-visible --inside-color 282a36 --inside-clear-color 292b2e --inside-ver-color 292b2e --inside-wrong-color 292b2e --key-hl-color CE7BB0 --line-color 282a36 --line-clear-color 292b2e --line-ver-color 292b2e --line-wrong-color 292b2e --ring-color 282a36 --ring-clear-color 292b2e --ring-ver-color 292b2e --ring-wrong-color 292b2e --separator-color 6867AC --text-color FFBCD1 --text-clear-color FFBCD1 --text-ver-color 6867AC --text-caps-lock-color A267AC --text-wrong-color CE7BB0 --effect-blur 4x2 --bs-hl-color 6867AC --fade-in 0.5 -K'

exec swayidle -w \
    timeout 600 $lock \
    timeout 900 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    timeout 1800 'systemctl suspend' \
    before-sleep $lock

# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.


#
# autostart
#

# start the polkit manager
exec lxsession
# clipboard manager
exec wl-paste -t text --watch clipman store --no-persist
#exec wl-paste -p -t text --watch clipman store -P --histpath="~/.local/share/clipman-primary.json"
exec waybar
# start Discord on chat workspace
exec swaymsg "workspace $ws2; exec discord-canary"
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob


### Key bindings
#
# Basics:
#

    # Volume Buttons:
    set $save_pactl $HOME/Documents/scripts/100_max_pactl.sh
    bindsym XF86AudioRaiseVolume exec $save_pactl @DEFAULT_SINK@ inc 2 && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1| awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
    bindsym XF86AudioLowerVolume exec $save_pactl @DEFAULT_SINK@ dec 2 && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1 | awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
    bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    # Brightness Buttons:
    bindsym XF86MonBrightnessDown exec brightnessctl set 2%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK
    bindsym XF86MonBrightnessUp exec brightnessctl set +2% | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK

    # lock screen
    bindsym $mod+Shift+y exec $lock
    # Start a terminal
    bindsym $mod+Return exec $term
    # Start a scratchpad kitty terminal
    bindsym $mod+Shift+Return exec $term --class="scratchpadKitty"

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Start your launcher
    bindsym $mod+d exec $menu
    bindsym Ctrl+Space exec $menu

    # clipboard management with wofi
    bindsym $mod+u exec clipman pick --tool CUSTOM -T"$HOME/.config/wofi/wofi-clip.sh select"
    bindsym $mod+Shift+u exec clipman clear --tool CUSTOM -T"$HOME/.config/wofi/wofi-clip.sh delete"

    # window switching
    bindsym Alt+Tab exec $HOME/.config/wofi/wofi-switch-windows.sh

    # open YouTube link from clipboard with mpv
    bindsym $mod+Alt+Ctrl+m exec $HOME/Documents/scripts/mpv-youtube.sh

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

#
# Workspaces:
#

    # enable workspace fast switching
    workspace_auto_back_and_forth yes

    # move workspaces to external monitor
    workspace $ws1 output $edp
    workspace $ws2 output $edp
    workspace $ws3 output $edp
    workspace $ws4 output $edp
    workspace $ws5 output $edp
    workspace $ws6 output $ex1
    workspace $ws7 output $ex1
    workspace $ws8 output $ex1
    workspace $ws9 output $ex1

    # Switch to workspace
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace $ws6
    bindsym $mod+7 workspace $ws7
    bindsym $mod+8 workspace $ws8
    bindsym $mod+9 workspace $ws9
    bindsym $mod+Mod1+1 workspace $ws6
    bindsym $mod+Mod1+2 workspace $ws7
    bindsym $mod+Mod1+3 workspace $ws8
    bindsym $mod+Mod1+4 workspace $ws9

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace $ws4
    bindsym $mod+Shift+5 move container to workspace $ws5
    bindsym $mod+Shift+6 move container to workspace $ws6
    bindsym $mod+Shift+7 move container to workspace $ws7
    bindsym $mod+Shift+8 move container to workspace $ws8
    bindsym $mod+Shift+9 move container to workspace $ws9
    bindsym $mod+Ctrl+Mod1+1 move container to workspace $ws6
    bindsym $mod+Ctrl+Mod1+2 move container to workspace $ws7
    bindsym $mod+Ctrl+Mod1+3 move container to workspace $ws8
    bindsym $mod+Ctrl+Mod1+4 move container to workspace $ws9
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    #bindsym $mod+b splith
    #bindsym $mod+v splitv
    bindsym $mod+i split toggle

    # Switch the current container between different layout styles
    # bindsym $mod+s layout stacking
    # bindsym $mod+w layout tabbed
    #bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

    # Set opacity to 1 for current focus
    bindsym $mod+p opacity 1

    # Set sticky on current focus
    bindsym $mod+s sticky toggle

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+o move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+o scratchpad show


#
# Window settings:
#

# set opacity for all windows
for_window [app_id=".*"] opacity 0.8

# float/position/size etc.
for_window [app_id="scratchpadKitty"] floating enable, resize set 900 500, move scratchpad
for_window [app_id="font-manager"] floating enabled
for_window [app_id="" title="Live Caption"] floating enabled, move position 0 0
for_window [app_id="mpv" title="YouTube"] floating enabled, sticky enabled, resize set 500, move position -10 -10, opacity 1

# opacity settings
for_window [app_id="google-chrome" title="Netflix - *"] opacity 1
for_window [app_id="google-chrome" title="(?i) - YouTube - Google Chrome"] opacity 1
# for_window [app_id="chrome-*-Default" title="(?i) - Enhancer for YouTube™"] opacity 1

# workspace assignments
assign [app_id="" class="discord"] $ws2
assign [app_id="kitty" title="weechat"] $ws2
for_window [app_id="kitty" title="weechat"] move to workspace $ws2


#
# Resizing containers:
#
mode "ﭕ" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "ﭕ"

#
# Dunst controls
#
mode "ﯯ" {
    bindsym h exec dunstctl history-pop
    bindsym l exec dunstctl close
    bindsym Shift+l exec dunstctl close-all
    bindsym j exec dunstctl context

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+g mode "default"
}
bindsym $mod+g mode "ﯯ"


# borders and style
default_border pixel 1
gaps outer 5
gaps top 0
gaps inner 10


